<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/gridviewdata"
        android:layout_width="170dp"
        android:background="#fff"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="200dp">

        <TextView
            android:id="@+id/titleproduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/images"
            android:layout_centerHorizontal="true"
            android:fontFamily="serif"
            android:text="Crusty Fruits"
            android:textColor="@color/gold3"
            android:textSize="17sp"
            android:textStyle="normal|italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="170dp"
            android:layout_marginLeft="17dp"
            android:text="Price : Rp. "
            android:textSize="15sp"
            android:textColor="@color/brownGold"
            android:fontFamily="serif"/>

        <TextView
            android:id="@+id/hargaproduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="170dp"
            android:layout_marginLeft="97dp"

            android:textSize="15sp"
            android:textColor="@color/brownGold"
            android:fontFamily="serif"/>

        <View
            android:layout_width="160dp"
            android:layout_height="1dp"
            android:visibility="visible"
            android:layout_below="@+id/titleproduk"
            android:layout_centerHorizontal="true"
            android:background="@color/gold3" />

        <ImageView
            android:id="@+id/images"
            android:layout_width="170dp"
            android:layout_height="130dp"
            android:src="@drawable/cake1"
             />
    </RelativeLayout>


</RelativeLayout>