<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.thesavorycake.thesavory.RegisterActivity">

    <ImageView
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:src="@drawable/logo_edited"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="25dp"
        android:text="Full Name"
        android:textSize="16dp"
        android:textColor="@color/gold2"
        android:fontFamily="serif"
        />

    <EditText
        android:id="@+id/nama"
        android:layout_width="170dp"
        android:layout_height="35dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="110dp"
        android:background="@drawable/border"
        android:textColor="@android:color/black"
        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="190dp"
        android:text="NIK"
        android:textSize="16dp"
        android:textColor="@color/gold2"
        android:fontFamily="serif"
        />

    <EditText
        android:id="@+id/nik"
        android:layout_width="170dp"
        android:layout_height="35dp"
        android:layout_marginLeft="187dp"
        android:layout_marginTop="110dp"
        android:background="@drawable/border"
        android:textColor="@android:color/black"
        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="25dp"
        android:text="Email"
        android:textColor="@color/gold2"
        android:textSize="16dp"
        android:fontFamily="serif"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="340dp"
        android:layout_height="35dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/border"
        />

    <TextView
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="25dp"
        android:text="Mobile Number"
        android:textColor="@color/gold2"
        android:textSize="16dp"
        android:fontFamily="serif"/>

    <EditText
        android:id="@+id/nohp"
        android:layout_width="340dp"
        android:layout_height="35dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="250dp"
        android:background="@drawable/border"
        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="25dp"
        android:text="Address"
        android:textColor="@color/gold2"
        android:textSize="16dp"
        android:fontFamily="serif"/>

    <EditText
        android:id="@+id/alamat"
        android:layout_width="340dp"
        android:layout_height="55dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="320dp"
        android:background="@drawable/border"
        android:inputType="textMultiLine"
        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="390dp"
        android:layout_marginLeft="25dp"
        android:text="Password"
        android:textColor="@color/gold2"
        android:textSize="16dp"
        android:fontFamily="serif"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="410dp"
        android:background="@drawable/border"
        android:password="true"
        />

    <CheckBox
        android:id="@+id/cbterms"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/border"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="465dp"
        />

    <TextView
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:layout_marginTop="463dp"
        android:layout_marginLeft="65dp"
        android:text="I agree with all terms and services."
        android:textSize="15dp"
        android:fontFamily="serif"
        android:textColor="@color/gold2"/>

    <ImageView
        android:id="@+id/btnregist"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_marginTop="490dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/btnregist2"/>

</RelativeLayout>
